# Railway Configuration for DEVELOPMENT Environment
# This file is a template - copy these settings to your Railway dev service
# 
# IMPORTANT: Each environment (dev/prod) must have:
# - Separate Railway service
# - Separate Postgres plugin (separate database!)
# - Separate Redis plugin (separate cache!)
# - Different CORS_ORIGIN values
# - Different ENVIRONMENT variable

[build]
builder = "DOCKERFILE"
dockerfilePath = "Dockerfile"

[deploy]
startCommand = "node dist/main.js"
healthcheckPath = "/"
healthcheckTimeout = 300
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 10

[env]
# Environment Configuration - DEVELOPMENT
ENVIRONMENT = "development"
NODE_ENV = "development"

# Google OAuth (can use same client IDs or separate ones)
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID = "430191522654-o70t2qnqc4bvpvmbpak7unog7pvp9c95.apps.googleusercontent.com"

# CORS - Development domains only
CORS_ORIGIN = "https://dev.karma-community-kc.com,http://localhost:19006,http://localhost:3000"

# Security - Use a DIFFERENT JWT_SECRET for development!
# Generate a new one: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET = "CHANGE_THIS_TO_A_DIFFERENT_SECRET_FOR_DEV_ENVIRONMENT"

# Database and Redis will be automatically set by Railway plugins
# ⚠️ CRITICAL: Connect to SEPARATE Postgres and Redis plugins for dev!
# Do NOT use the same plugins as production!



